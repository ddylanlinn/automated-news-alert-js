{
	"name": "automated-news-alert",
	"version": "2.0.0",
	"description": "A generic news monitoring system based on Clean Architecture design",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "ts-node src/index.ts",
		"crawl": "ts-node src/index.ts crawl",
		"test": "ts-node src/index.ts test",
		"stats": "ts-node src/index.ts stats",
		"cleanup": "ts-node src/index.ts cleanup",
		"daemon:start": "ts-node src/daemon.ts start",
		"daemon:stop": "ts-node src/daemon.ts stop",
		"daemon:restart": "ts-node src/daemon.ts restart",
		"daemon:status": "ts-node src/daemon.ts status",
		"lint": "eslint src/**/*.ts",
		"lint:fix": "eslint src/**/*.ts --fix",
		"type-check": "tsc --noEmit",
		"test:unit": "jest",
		"test:watch": "jest --watch",
		"clean": "rm -rf dist",
		"postinstall": "echo 'Dependencies installed successfully'"
	},
	"packageManager": "pnpm@8.0.0",
	"keywords": [
		"news",
		"monitoring",
		"crawler",
		"notifications",
		"clean-architecture",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"axios": "^1.6.0",
		"cheerio": "^1.0.0-rc.12",
		"dotenv": "^16.3.1",
		"express": "^4.18.2",
		"node-cron": "^3.0.3",
		"nodemailer": "^6.9.7",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.8",
		"@types/node": "^20.9.0",
		"@types/node-cron": "^3.0.11",
		"@types/nodemailer": "^6.4.14",
		"@typescript-eslint/eslint-plugin": "^6.12.0",
		"@typescript-eslint/parser": "^6.12.0",
		"eslint": "^8.54.0",
		"jest": "^29.7.0",
		"ts-jest": "^29.1.1",
		"ts-node": "^10.9.1",
		"typescript": "^5.2.2"
	},
	"engines": {
		"node": ">=18.0.0"
	}
}
